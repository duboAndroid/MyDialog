<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed the button status -->
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/commCornersSize"
                android:bottomRightRadius="@dimen/commCornersSize" />
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item> <!-- no focus the button status(the normal status button) -->
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/commCornersSize"
                android:bottomRightRadius="@dimen/commCornersSize" />
            <solid android:color="@color/common_block_bg_color"/>
        </shape>
    </item>
</selector>